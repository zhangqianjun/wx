.main-view{height:100%;display:flex;flex-direction: column;}

.main-view scroll-view{height:100%;}
.nav-view{display:flex;flex-wrap:wrap;margin:12px 0;}
.nav-view li{box-sizing:border-box;width:33.3%;text-align:center;padding:12px 0;}
.nav-view li image{width:33.3%;height:45px;display:block;margin:0 auto;padding-bottom:6px;}
.nav-view li span{font-size:15px;color:#9C9DA7;    font-family: "microsoft yahei";}
.swiper-dian{height:10px;width:100%;display:flex;position:absolute;bottom:10px;left:40%;z-index:100;}
.swiper-dian li{height:10px;width:10px;border-radius:50%;background:rgba(0,0,0,0.7);opacity:.7;margin:0 5px;}
.swiper-view image{width:100%;height:100%;}
.main-picture{position:relative;}
.swiper-dian li.act{background:rgba(255,108,147,1);}


.main-title{display:flex;}
.title{width:100%;font-size:24px;color:#5da7e0;line-height:30px;display:flex;align-items:center;justify-content:center;height:50px;}
.title image{width:30px;height:30px;}
.title span{height:30px;}

.main-content{display:flex;width:100%;background:#eee;}
.main-content ul{display:flex;flex-wrap:wrap;padding:10px 5px 10px 10px;}
.main-content ul navigator{width:48%;box-sizing:border-box;margin:5px 2% 5px 0;background:#fff;}


.main-content ul li image{width:100%;}
.main-content ul li b{display:block;padding:5px;}
.main-content ul li div{display:flex;align-items:center;}
.main-content ul li div span{color:#f54372;}
.main-content ul li div image{width:12%;height:20px;padding-left:30%;}


.main-view  view button{font-size:14px;border:0;}